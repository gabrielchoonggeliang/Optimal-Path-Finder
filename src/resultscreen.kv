<Result>:
	canvas:
		Color:
			rgba:[1,1,1,1]
		Rectangle:
			pos:self.pos
			size:self.size




    Label:
        id:RS
        text:app.r
        font_size:18
        bold:False
        color:.9,.2,.1,1
        pos: 350,400
        halign:'right'
        valign:'middle'
        shorten:True
        shorten_from:'right'
        markup:True


    Button:
        pos:350,20
        text: 'Exit'
        on_press:
            root.press_button1(self)
            app.stop()