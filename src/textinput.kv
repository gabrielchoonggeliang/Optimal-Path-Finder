<TextInputWidget>:
	canvas:
		Color:
			rgba:[1,1,1,1]
		Rectangle:
			pos:self.pos
			size:self.size

    Label:
        text:'Optimal Path'
        font_size:25
        bold:True
        color:.9,.2,.1,1
        pos: 130,480
        text_size:cm(15),mm(30)
        halign:'right'
        valign:'middle'
        shorten:True
        shorten_from:'right'
        markup:True

    Label:
        text:'Initial place'
        font_size:18
        bold:False
        color:.9,.2,.1,1
        pos: 80,400
        text_size:cm(5),mm(10)
        halign:'right'
        valign:'middle'
        shorten:True
        shorten_from:'right'
        markup:True

    Label:
        text:'Target place'
        font_size:18
        bold:False
        color:.9,.2,.1,1
        pos: 560, 400
        text_size:cm(5),mm(10)
        halign:'right'
        valign:'middle'
        shorten:True
        shorten_from:'right'
        markup:True

    TextInput:
        id: IP
		multiline:False
		pos:80,330
		allow_copy:True
		auto_indent:True
		hint_text:'Please Enter Initial Place'
        size:200,80
        write_tab:False

	TextInput:
        id: TP
		multiline:False
		pos:560,330
		allow_copy:True
		auto_indent:True
		hint_text:'Please Enter Target Place'
		size:200,80
		write_tab:True
		on_text_validate:
		    root.press_button(self)
		    root.btn_touch_up()



    Button:
        text:'Click me to process your path'
        size:250,80
        pos:275,100
		on_press:root.press_button(self)
		on_release:root.btn_touch_up()

	Button:
        text:'Quit'
        size:80,40
        pos:358,50
        on_press:root.release_button(self)
        on_press: app.stop()